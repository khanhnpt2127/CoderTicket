
  <div class="container ctn-1">
    <%= form_for @user do |f| %>
      <% unless @user.errors.empty? %>
        <div class="alert alert-danger">
          <%= @user.errors.full_messages.to_sentence %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "Enter your Name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: "Enter your Email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Enter your Password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, placeholder: "Re-Enter your Password", class: "form-control" %>
      </div>

      <%= f.submit "Create An Account", class: "btn btn-info" %>

    <% end %>
   </div>
