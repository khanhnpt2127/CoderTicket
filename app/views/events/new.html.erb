    <%= f.label :extended_html_description %>
    <%= f.text_field :extended_html_description, placeholder: "Enter Description", class: "form-control" %>
  </div>
    <%= f.label :starts_at%>
    <%= f.text_field :starts_at%>

    <%= f.label :ends_at %>
    <%= f.text_field :ends_at%>

    <%= f.select :category_id, Category.all.map{|e| [e.name, e.id]} %>
    
